# ============================================================
# Честная Генерация — Dashboard Configuration
# Скопируйте в config.yaml и заполните свои значения
# ============================================================

app:
  name: "Честная Генерация"
  version: "1.0.0"
  debug: false

auth:
  token: "CHANGE_ME_TO_SECURE_RANDOM_STRING"

database:
  host: "localhost"
  port: 5432
  name: "cg_telemetry"
  admin_user: "cg_writer"
  admin_password: "YOUR_ADMIN_PASSWORD"
  ui_user: "cg_ui"
  ui_password: "YOUR_UI_PASSWORD"
  pool_min: 2
  pool_max: 10

mqtt:
  host: "localhost"
  port: 1883
  topic_prefix: "cg/v1/decoded/SN"
  client_id: "cg-dashboard"
  reconnect_interval: 5
  max_reconnect_interval: 60

backend:
  host: "0.0.0.0"
  port: 5555

frontend:
  dev_port: 5173
  api_base_url: "http://localhost:5555"
  ws_url: "ws://localhost:5555/ws"
  map:
    style_url: "https://demotiles.maplibre.org/style.json"
    center: [100.0, 62.0]
    zoom: 3

telemetry:
  offline_timeout_sec: 300
  key_registers:
    installed_power: 43019
    current_load: 40034
    engine_hours: 40070
    oil_temp: 40063
    oil_pressure: 40062
    engine_state: 46109
